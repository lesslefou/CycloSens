<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Launcher">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start An Activity : "
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/switch1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/switch2"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textSwitch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS pairing"
        app:layout_constraintTop_toTopOf="@id/switch1"
        app:layout_constraintBottom_toBottomOf="@id/switch1"
        app:layout_constraintEnd_toStartOf="@id/imageSwitch1"
        app:layout_constraintStart_toEndOf="@id/switch1" />


    <ImageView
        android:id="@+id/imageSwitch1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/gpsLogo"
        app:layout_constraintTop_toTopOf="@id/switch1"
        app:layout_constraintBottom_toBottomOf="@id/switch1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textSwitch1" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/switch1"
        app:layout_constraintBottom_toTopOf="@id/switch3"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textSwitch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cardiac Belt pairing"
        app:layout_constraintTop_toTopOf="@id/switch2"
        app:layout_constraintBottom_toBottomOf="@id/switch2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/switch2" />

    <ImageView
        android:id="@+id/imageSwitch2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/cardiacBelt"
        app:layout_constraintTop_toTopOf="@id/switch2"
        app:layout_constraintBottom_toBottomOf="@id/switch2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textSwitch2" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/switch2"
        app:layout_constraintBottom_toTopOf="@id/switch4"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textSwitch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pedal pairing"
        app:layout_constraintTop_toTopOf="@id/switch3"
        app:layout_constraintBottom_toBottomOf="@id/switch3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/switch3" />

    <ImageView
        android:id="@+id/imageSwitch3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/cardiacBelt"
        app:layout_constraintTop_toTopOf="@id/switch3"
        app:layout_constraintBottom_toBottomOf="@id/switch3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textSwitch3" />

    <Switch
        android:id="@+id/switch4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/switch3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textSwitch4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Ghost Mode ?"
        app:layout_constraintTop_toTopOf="@id/switch4"
        app:layout_constraintBottom_toBottomOf="@id/switch4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/switch4" />


    <ImageView
        android:id="@+id/imageSwitch4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/cardiacBelt"
        app:layout_constraintTop_toTopOf="@id/switch4"
        app:layout_constraintBottom_toBottomOf="@id/switch4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textSwitch4" />
</androidx.constraintlayout.widget.ConstraintLayout>